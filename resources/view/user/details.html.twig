{% extends 'Message:Mothership:User::user:listing:view' %}
{% block main %}
{{ form_start(impersonateForm) }}
<hgroup class="title">
	<h1>{{ user.name }} <span>User #{{ userID }}</span></h1>
<div class="skip-payment">{{ form_rest(impersonateForm) }}</div>
</hgroup>
{# {{ render(controller('Message:Mothership:User::Controller:User:Menu#index', {'userID':userID}))}} #}
<div class="topbar">
	<ul class="tabs">
		<li class="active">
			<a href="{{ url('ms.cp.user.admin.detail.edit', {userID:userID}) }}" data-live>Details</a>
		</li>
		<li class="">
			<a href="{{ url('ms.cp.user.admin.address.edit', {userID:userID}) }}" data-live>Addresses</a>
		</li>
		<li class="">
			<a href="{{ url('ms.cp.user.admin.groups.edit', {userID:userID}) }}" data-live>Groups</a>
		</li>
		<li class="">
			<a href="{{ url('ms.cp.user.admin.orderhistory', {userID:userID}) }}" data-live>Order History</a>
		</li>
	</ul>
	<div class="controls">
		<button class="button small preview impersonate">Log in as this user</button>
		{{ form_end(impersonateForm) }}
	</div>
</div>
<div class="container-content extended">
	{{ form_start(accountdetails) }}
		{{ form_rest(accountdetails) }}
		<button type="submit" class="button small save" id="save-content">Update user</button>
	{{ form_end(accountdetails) }}
</div>
{% endblock %}